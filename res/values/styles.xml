<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseWhiteTheme" parent="android:Theme.Holo.Light">

    </style>

    <style name="WhiteTheme" parent="AppBaseWhiteTheme">
        <item name="android:actionBarStyle">@style/SeochonActionBar</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="HowtouseWhiteTheme" parent="AppBaseWhiteTheme">
        <item name="android:actionBarStyle">@style/SeochonActionBar</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="SeochonActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@drawable/actionbar_bg</item>
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="android:logo">@drawable/actionbar_title</item>
    </style>

    <style name="HowtouseActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@drawable/actionbar_bg</item>
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="android:logo">@drawable/howtouse_actionbar_title</item>
    </style>
</resources>